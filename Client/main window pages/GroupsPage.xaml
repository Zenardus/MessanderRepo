<Page x:Class="Client.GroupsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="400"
      Title="Groups">

    <Grid Style="{StaticResource style}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Groups" Foreground="WhiteSmoke" HorizontalAlignment="Center" FontWeight="ExtraBold" FontSize="13"/>
        <Button Name="button_createGroup" Grid.Row="1" Content="create group" Click="button_createGroup_Click"/>
        <ListBox Name="listBox_groups" BorderBrush="#FF2D3FB9" Grid.Row="2" Background="{StaticResource BackPrimary}" HorizontalContentAlignment="Stretch" SelectionChanged="listBox_groups_SelectionChanged"/>
    </Grid>
</Page>
